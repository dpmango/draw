  include shared/head.pug

  body
    include shared/header-login.pug
    
    .page
      .page__content
        // WELCOME::START
        .welcome.wow.fadeIn
          .container
            .welcome__wrapper
              .welcome__title Мы не онлайн-обучение. <br> Мы помогаем привнести творчество в вашу жизнь
        
        // VIDEO :: START
        .video.video--have-animation
          .container
            .heading-gray.wow.transformUp(data-wow-delay='2s') это видео стоит посмотреть
            .video__wrapper
              .video__content.wow.transformUp(data-wow-delay='2.2s')
                .video__player
                  i.icon.icon-circle
                    i.icon.icon-play
                  img(src='images/tmp/video.jpg' srcset='images/tmp/video@2x.jpg 2x')
                  // place iframe with ?autoplay=0 param, don't forget about 100% width and height
                  iframe(src='https://player.vimeo.com/video/72874423?autoplay=0', width='100%', height='100%', frameborder='0', webkitallowfullscreen='', mozallowfullscreen='', allowfullscreen='')
        
        div(style='padding: 50px 0; text-align: center;')
          a(href='#modalLogin' style='margin-right: 20px').btn.btn--primary.js-popup
            span Логин
          a(href='#modalRegistration' style='margin-right: 20px').btn.btn--primary.js-popup
            span Регистрация
          a(href='#modalRecover').btn.btn--primary.js-popup
            span Восстановить пароль

      include shared/footer.pug
      include shared/modals.pug
      
    include shared/scripts.pug
