*
  box-sizing: border-box
  outline: none

a
  color: inherit
  text-decoration: none
  &:hover, &:focus, &:visited
    text-decoration: none

ul
  list-style: none
  li
    display: inline-block


body, html
  background: white
  color: $fontColor
  font-family: "Roboto", 'Helvetica Neue', Helvetica, Arial, sans-serif
  font-size: 16px
  min-width: 320px
  max-width: 100%
  margin: 0
  overflow-x: hidden
  -webkit-font-smoothing: antialiased
  -moz-osx-font-smoothing: grayscale

.container
  width: 100%
  max-width: 1260px
  margin-left: auto
  margin-right: auto
  padding-left: 20px
  padding-right: 20px
  &--fluid
    max-width: 100%
  &--1366
    max-width: 1366px
  &--1100
    max-width: 1100px
  &--900
    max-width: 920px
  &--no-pad
    padding-left: 0
    padding-right: 0

@media($mobile-s)
  .container
    padding-left: 15px
    padding-right: 15px


::selection
  background: transparent

.page
  padding-top: 120px
  display: flex
  flex-direction: column
  min-height: 100vh
  &__content
    flex: 1 0 auto
  ::selection
    background: color($colorPrimary a(99%))
    color: white


@media($mobile)
  .page
    padding-top: 100px
@media($mobile-s)
  .page
    padding-top: 95px
@media(width <= 375px)
  .page
    padding-top: 65px

