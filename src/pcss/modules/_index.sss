// INDEX PAGE
.welcome
  padding-top: 15vh
  padding-bottom: 15vh
  &__wrapper
    max-width: 720px
    margin-left: auto
    margin-right: auto
    text-align: center
  &__title
    font-family: 'Core65'
    font-size: 44px
    line-height: 1.65
    text-transform: uppercase

@media($tablet)
  .welcome
    &__title
      font-size: 35px

@media($mobile)
  .welcome
    padding-top: 50px
    padding-bottom: 65px
    &__title
      font-size: 30px

@media($mobile-s)
  .welcome
    &__title
      font-size: 20px


// VIDEO
.video
  transition: opacity $transitionSpeed $ease
  &--have-animation
    opacity: 0
    &.animation-end
      opacity: 1
  &--small
    .video__wrapper
      max-width: 660px
      &::after
        background: url('../images/el/videoAquaBg@2x.png') no-repeat center
        background-size: contain
        width: 660px
        height: 260px
        left: 50%
        transform: translateX(-50%)

    .video__content
      max-width: 300px
      padding-top: 30px
      padding-bottom: 45px
      &::after
        background-size: contain
        bottom: 10px
      .icon-circle
        transform: translate(-50%,-50%) scale(.5)

  &__wrapper
    position: relative
    max-width: 1040px
    margin-left: auto
    margin-right: auto
    &::after
      position: absolute 0
      z-index: 1
      display: block
      content: ' '
      background: url('../images/el/videoBlot@2x.png') no-repeat center
      background-size: contain
  &__content
    position: relative
    z-index: 2
    padding-top: 45px
    padding-bottom: 150px
    max-width: 850px
    margin-left: auto
    margin-right: auto
    &::after
      display: block
      content: ''
      position: absolute
      z-index: 1
      left: 0px
      right: 0px
      bottom: 70px
      height: 200px
      background: url('../images/el/videoBlur@2x.png') no-repeat center bottom
      background-size: cover
      transition: all $transitionSpeed $ease
  &__player
    position: relative
    font-size: 0
    border-radius: 6px
    overflow: hidden
    &::after
      display: block
      content: ' '
      background: color($fontColor a(20%))
      position: absolute 0
      z-index: 3
      border-radius: 6px
      transition: opacity $transitionSpeed $ease
    img
      width: 100%
      position: relative
      z-index: 2
      opacity: 1
      transition: opacity $transitionSpeed $ease
    iframe
      position: absolute 0
      z-index: 1
      opacity: 0
      transition: opacity $transitionSpeed $ease
    .icon
      cursor: pointer
      font-size: 30px
      position: absolute
      top: 50%
      left: 50%
      z-index: 4
      transform: translate(-50%, -50%)
      color: white
      transition: all $transitionSpeed $ease
      &.icon-play
        top: 55%
        left: 53%
    .icon-circle
      &:hover
        background: white
        .icon-play
          font-size: 40px
          color: $colorPrimary
    &--dark
      &::after
        background: color($fontColor a(80%))
    &--soft
      &::after
        display: none

    &.playing
      img
        z-index: 1
        opacity: 0
      iframe
        z-index: 3
        opacity: 1
      .icon
        opacity: 0
      &::after
        z-index: 2
        opacity: 0

@media($desktop)
  .video
    &__content
      padding-left: 7%
      padding-right: 7%
      &::after
        left: 7%
        right: 7%
        bottom: 90px

@media($tablet)
  .video
    &__content
      &::after
        bottom: 80px
        height: 200px
        background-size: contain
    &__player
      .icon
        font-size: 24px
      .icon-circle
        &:hover
          .icon-play
