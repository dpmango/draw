// TESTIMONIALS
.testimonials
  position: relative
  margin-top: 80px
  &__slider
    .slick-track
      display: flex
      align-items: stretch

  &__box
    background: #F0F0F0
    padding: 40px 0px 50px 0px
    .testimonials__slide
      background: transparent
    .testimonials__slide__nav
      top: auto
      bottom: 0px
      left: auto
      right: 0
      width: auto
    &__wrapper
      position: relative
      display: flex
      max-width: 960px
      margin: auto
      padding: 60px 20px 0 20px
    &__image
      flex: 0 1 46%
      margin-right: 20px
      img
        max-width: 100%
      span
        display: block
        color: #A1A1A1
        font-size: 12px
        margin-top: 10px
        letter-spacing: -.19px
        line-height: 1.2
    &__content
      flex: 0 2 54%
      margin-left: 40px
    &__text
      margin-top: -.3em
      font-size: 17px
      line-height: 1.4
    &__author
      margin-top: 25px
      display: flex
      align-items: center
      &__avatar
        flex: 0 0 36px
        border-radius: 50%
        overflow: hidden
        img
          max-width: 100%
      &__name
        color: #A1A1A1
        font-size: 12px
        margin-left: 12px
        letter-spacing: -.19px
        line-height: 1.2
        span
          display: block

  &__slide
    min-width: 0
    flex: 1
    display: flex !important
    flex-direction: column
    position: relative
    overflow: hidden
    background: #E0E0DF
    &__wrapper
      flex: 1
      display: flex
    &__content
      flex: 0 1 45%
      display: flex
      flex-direction: column
      padding: 100px 20px 200px 20px
      max-width: 1200px
    &__image
      position: relative
      flex: 0 2 55%
      align-self: flex-end
      img
        max-width: 100%
    &__author
      font-family: 'Core65'
      font-size: 18px
      text-transform: uppercase
      &--mobile
        display: none
      span
        margin-top: 1em
        display: block
        font-family: 'Roboto'
        font-size: 12px
        text-transform: none
        color: color($fontColor a(40%))
    &__text
      padding: 20px 0
      margin: auto 0
      max-width: 365px
      p
        font-size: 21px
        letter-spacing: -.33px
        line-height: 1.7
    &__cta
      padding-top: 10px
    &__nav
      position: absolute
      bottom: 45px
      left: 20px
      right: 20px
      width: 100%
      z-index: 5
      color: $colorPrimary
      font-size: 12px
      display: flex
      align-items: center
      span
        display: inline-block
        min-width: 120px
        text-align: right
        margin-right: 10px
        margin-top: -3px
        transition: all $transitionSpeed $ease
      .icon
        display: inline-block
        cursor: pointer
        transition: all $transitionSpeed $ease
        &:hover
          opacity: .7
      &--single
        transform: translate3d(0,-30px,0)
        cursor: pointer
        &:hover
          span
            color: $colorBlue

@media(width <= 1030px)
  .testimonials
    &__slide
      &__nav
        &--single
          padding-right: 20px

@media($desktop)
  .testimonials
    &__box
      &__text
        font-size: 16px
      &__content
        margin-left: 20px


@media($tablet)
  .testimonials
    &__box
      padding: 50px 0 0 0
      &__wrapper
        flex-direction: column-reverse
      &__image
        position: relative
        flex: 0 0 auto
        height: 300px
        overflow: hidden
        margin: 30px -20px 80px -20px
        img
          position: absolute
          min-width: 100%
          min-height: 100%
          width: auto
          height: auto
        span
          position: absolute
          z-index: 2
          bottom: -20px
          left: 40px

      &__content
        flex: 0 0 auto
        margin-left: 0
        padding-left: 40px
        padding-right: 40px

    &__slide
      background: transparent
      &__wrapper
        flex-direction: column
      &__image
        flex: 0 0 auto
        background: #E0E0DF
        order: 2
        margin-left: -20px
        margin-right: -20px
        padding-right: 20px
        padding-left: 20px
        width: calc(100% + 40px)
        img
          max-height: 250px
          margin-left: auto
      &__content
        flex: 0 0 auto
        order: 3
        padding: 40px 20px 50px 20px
        .testimonials__slide__author
          display: none
      &__author
        &--mobile
          display: block
          order: 1
          padding-left: 20px
          padding-right: 20px
          margin-bottom: 20px
      &__text
        padding: 0
        p
          font-size: 18px
      &__nav
        bottom: auto
        top: 165px
        &--single
          transform: translate3d(0,-15px,0)


@media($mobile)
  .testimonials
    &__box
      padding-top: 30px
      &__wrapper
        padding-top: 10px
      &__text
        font-size: 15px
      &__author
        margin-top: 15px
      &__content
        padding: 20px 40px 0px 40px


@media($mobile-s)
  .testimonials
    &__box
      margin-left: -15px
      margin-right: -15px
      &__text
        font-size: 13px
    &__slide
      &__content
        padding: 20px 20px 30px 20px
      &__image
        img
          max-height: 200px
      &__text
        p
          font-size: 13px
      &__nav
        top: 140px

