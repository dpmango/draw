// BLOG
.blog-summ
  padding-top: 100px
  &__wrapper
    margin-top: 30px
    display: flex
    flex-wrap: wrap
    margin-left: -10px
    margin-right: -10px
  .blog-card
    margin: 10px
    flex: 0 1 calc(50% - 20px)
  &__cta
    margin-top: 45px
    text-align: center
    a
      transition: all $transitionSpeed $ease
      &:hover
        filter: grayscale(1)

.blog-card
  display: block
  position: relative
  overflow: hidden
  border-radius: 4px
  font-size: 0
  margin: 15px 10px
  height: 350px
  &--huge
    display: flex
    margin: 25px 0 45px 0
    height: 440px
    font-size: 0
    overflow: visible
    transition: transform .35s easeOutBack
    &::after
      display: block
      content: ' '
      background: color($fontColor a(25%))
      position: absolute
      z-index: -1
      top: 40px
      left: 70px
      bottom: 0
      right: 0px
      filter: blur(10px)
      transition: all $transitionSpeed .15s $ease
    &:hover
      transform: translate3d(70px,0,0)
      &::after
        transform: translate3d(40px,25px,0)
    .blog-card__image
      position: relative
      z-index: 1
      overflow: hidden
      flex: 1 1 auto

  &--static
    &::after
      display: none
    &:hover
      transform: translate3d(0,0,0)

  &__image
    border-radius: 4px
    img
      position: absolute
      top: 50%
      left: 50%
      transform: translate(-50%, -50%)
      min-width: 100%
      min-height: 100%
      width: auto
      height: auto
      z-index: 1
      transition: all $transitionSpeed $ease
    &::after
      display: block
      content: ' '
      position: absolute 0
      z-index: 2
      background: linear-gradient(to bottom, color(transparent a(0%)) 0%, color(black a(50%)) 100%)
      transition: all $transitionSpeed $ease
  &__content
    position: absolute 0
    z-index: 3
    display: flex
    flex-direction: column
    color: white
    padding: 20px 25px
  &__name
    margin-top: auto
    font-size: 32px
    line-height: 0.9
    font-family: 'Core65'
    letter-spacing: -.5px
    min-height: 60px
  &__date
    font-size: 10px
    font-size: 14px
    margin-top: 10px
    color: color(white a(40%))

@media($desktop)
  .blog-card
    &--huge
      &:hover
        transform: translate3d(45px,0,0)
        &::after
          transform: translate3d(30px,20px,0)
    &--static
      &:hover
        transform: translate3d(0,0,0)

@media($tablet)
  .blog-summ
    padding-top: 70px
    &__wrapper
      margin-left: auto
      margin-right: auto
      flex-direction: column
    .blog-card
      flex: 0 0 auto
      margin-left: 0
      margin-right: 0

  .blog-card
    height: 300px
    &--huge
      margin: 30px 0 30px 0
      &::after
        display: none
      &:hover
        transform: translate3d(0px,0,0)
  a.blog-card--huge
    &:hover
      .blog-card__image::after
        background: linear-gradient(to bottom, color(transparent a(0%)) 0%, color(black a(75%)) 100%)

@media($mobile)
  .blog-summ
    &__wrapper
      margin-top: 10px
    &__cta
      margin-top: 25px

  .blog-card
    height: 250px

@media($mobile-s)
  .blog-summ
    padding-top: 60px
    &__wrapper
      margin-left: -15px
      margin-right: -15px

  .blog-card
    height: 220px
    border-radius: 0
    &--huge
      margin-left: -15px
      margin-right: -15px
    &__image
      border-radius: 0
    &__content
      padding: 25px 15px
    &__name
      text-align: center
    &__date
      text-align: center


